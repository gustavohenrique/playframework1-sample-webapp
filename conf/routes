# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Transactions.index
GET     /transactions/read/{accountId}          Transactions.read
POST    /transactions/create/{accountId}        Transactions.create
DELETE  /transactions/delete/{accountId}        Transactions.delete

GET     /accounts/read/{accountId}              Accounts.read
POST    /accounts/create                        Accounts.create
DELETE  /accounts/delete/{accountId}            Accounts.delete
PUT     /accounts/update                        Accounts.update

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
