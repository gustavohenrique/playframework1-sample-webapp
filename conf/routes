# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Users
POST    /users/authenticate                     api.Users.authenticate
POST    /users/create                           api.Users.create

# Importers
POST    /importers/upload                       api.Importers.upload

# Accounts
GET     /accounts/read/{<[0-9]+>id}             api.Accounts.read
POST    /accounts/create                        api.Accounts.create
DELETE  /accounts/delete/{<[0-9]+>id}           api.Accounts.delete
PUT     /accounts/update/{<[0-9]+>id}           api.Accounts.update

# Categories
GET     /categories/read/{<[0-9]+>id}           api.Categories.read
POST    /categories/create                      api.Categories.create
DELETE  /categories/delete/{<[0-9]+>id}         api.Categories.delete
PUT     /categories/update/{<[0-9]+>id}         api.Categories.update

# Payees
GET     /payees/read/{<[0-9]+>id}               api.Payees.read
POST    /payees/create                          api.Payees.create
DELETE  /payees/delete/{<[0-9]+>id}             api.Payees.delete
PUT     /payees/update/{<[0-9]+>id}             api.Payees.update

# Transactions
#GET     /transactions/read/account/{<[0-9]+>accountId}                  api.Transactions.read
#GET     /transactions/read/{<[0-9]+>id}/account/{<[0-9]+>accountId}     api.Transactions.read
POST    /transactions/create                                            api.Transactions.create
DELETE  /transactions/delete/{<[0-9]+>id}/account/{<[0-9]+>accountId}   api.Transactions.delete
PUT     /transactions/update/{<[0-9]+>id}                               api.Transactions.update

# Home Page
GET     /                                       Application.index
GET     /login                                  Auth.login
GET     /signup                                 Auth.signup

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  api.{controller}.{action}
*       /{controller}/{action}                  {controller}.{action}
