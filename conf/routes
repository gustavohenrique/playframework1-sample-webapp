# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
POST    /users/authenticate                     Users.authenticate
GET     /users/login                            Users.login
POST    /users/create                           Users.create

POST    /importers/upload                       Importers.upload

#GET     /                                       Transactions.index
#GET     /transactions/read/{accountId}          Transactions.read
#POST    /transactions/create/{accountId}        Transactions.create
#DELETE  /transactions/delete/{accountId}        Transactions.delete

GET     /transactions/read/account/{<[0-9]+>accountId}                  Transactions.read
GET     /transactions/read/{<[0-9]+>id}/account/{<[0-9]+>accountId}     Transactions.read
POST    /transactions/create                                            Transactions.create
DELETE  /transactions/delete/{<[0-9]+>id}/account/{<[0-9]+>accountId}   Transactions.delete
PUT     /transactions/update                                            Transactions.update

GET     /accounts/read/{<[0-9]+>id}             Accounts.read
POST    /accounts/create                        Accounts.create
DELETE  /accounts/delete/{<[0-9]+>id}           Accounts.delete
PUT     /accounts/update                        Accounts.update

GET     /categories/read/{<[0-9]+>id}           Categories.read
POST    /categories/create                      Categories.create
DELETE  /categories/delete/{<[0-9]+>id}         Categories.delete
PUT     /categories/update                      Categories.update

GET     /payees/read/{<[0-9]+>id}               Payees.read
POST    /payees/create                          Payees.create
DELETE  /payees/delete/{<[0-9]+>id}             Payees.delete
PUT     /payees/update                          Payees.update

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
